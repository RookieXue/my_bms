	            cursor: pointer;
            }
		</style>
	    <script src="~/Scripts/jquery-1.7.1.js"></script>
        <script type="text/javascript">
            var i = 0;
            var timer;
            $(function () {
                $(".ig").eq(0).show().siblings().hide();
                show();
                autorPlay();

                $(".tab").click(function () {
                    i = $(this).index();
                    show();
                    clearInterval(timer);
                    autorPlay();
                })
            })
            function show() {
                $(".ig").eq(i).fadeIn(300).siblings().fadeOut(300);
                $(".tab").eq(i).addClass("tabColor").siblings().removeClass("tabColor");
            }

            function autorPlay() {
                timer = setInterval(function () {
                    i++;
                    if (i == 5) {
                        i = 0;
                    }
                    show();

                }, 3000)
            }
        </script>
	</head>
